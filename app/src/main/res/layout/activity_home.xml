<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Main content of the screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/appName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PartsManager"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Menu"
                android:src="@drawable/ic_menu" />
        </LinearLayout>

        <!-- Search and Sorting -->
        <LinearLayout
            android:id="@+id/searchSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/header">

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:padding="8dp"
                android:minHeight="48dp"
                android:background="@drawable/search_background" />

            <ImageView
                android:id="@+id/sortIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Sort"
                android:src="@drawable/ic_sort"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Product Section -->
        <LinearLayout
            android:id="@+id/mobilePartContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchSection">

            <!-- Image of the mobile part -->
            <ImageView
                android:id="@+id/partImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="Mobile part image"
                android:src="@drawable/ic_part_image" />

            <!-- Part Name -->
            <TextView
                android:id="@+id/partName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Mobile Part Name"
                android:textSize="18sp" />

            <!-- Part Quantity -->
            <TextView
                android:id="@+id/partQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Quantity: 10"
                android:textSize="16sp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Decrease Button -->
                <ImageView
                    android:id="@+id/decreaseButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Decrease quantity"
                    android:src="@drawable/ic_minus" />

                <!-- Increase Button -->
                <ImageView
                    android:id="@+id/increaseButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Increase quantity"
                    android:src="@drawable/ic_plus" />
            </LinearLayout>

            <!-- Delete and Edit Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Edit Button -->
                <ImageView
                    android:id="@+id/editButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Edit product"
                    android:src="@drawable/ic_edit" />

                <!-- Delete Button -->
                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Delete product"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
